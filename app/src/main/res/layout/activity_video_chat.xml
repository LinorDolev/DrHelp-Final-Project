<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.VideoChatActivity">

    <FrameLayout
        android:id="@+id/subscriber_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6b6b6b">
    </FrameLayout>

    <TextView
        android:id="@+id/subscriber_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#fff"
        android:textSize="20sp"/>

    <FrameLayout
        android:id="@+id/publisher_frameLayout"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#ffcaca">

        <TextView
            android:id="@+id/publisher_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"/>
    </FrameLayout>



    <android.support.design.button.MaterialButton
        android:id="@+id/end_call_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        app:cornerRadius="30dp"
        app:icon="@drawable/ic_call_end_white_24dp"
        android:text="@string/end"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/flip_camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/end_call_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        app:fabSize="normal"
        app:maxImageSize="35dp"
        android:src="@drawable/camera_enhance_outline" />


</RelativeLayout>